<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OpiskeluSovellus.OpiskelijaSivu">

<StackLayout>

        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Opiskelijasovellus" HorizontalTextAlignment="Center" TextColor="White" FontSize="28"/>
        </Frame>

        <Label Text="Omat tiedot"></Label>
        
        <Label x:Name="opiskelija_lataus" />


        <ListView x:Name="opiskelijalista" SelectionMode="Single" StyleClass="lista">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Sukunimi}" Detail="{Binding Etunimi}" />
                </DataTemplate>
            </ListView.ItemTemplate>
          </ListView>



    <Button x:Name="navibutton" Text="Kursseihin" Clicked="navibutton_Clicked"></Button>

    </StackLayout>

</ContentPage>

